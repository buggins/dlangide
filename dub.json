{
    "name": "dlangide",
    "description": "Cross platform D language IDE based on dlangui library",
    "homepage": "https://github.com/buggins/dlangide",
    "license": "Boost",
    "authors": ["Vadim Lopatin"],

    "targetName": "dlangide",
    "targetPath": "bin",
    "targetType": "executable",

    "stringImportPaths": ["views"],

    "dependencies": {
        "dlangui": "==0.9.186",
        "dcd": "~>0.13.1"
    },

    "copyFiles-windows": [
        "libs/windows/x86/mago-mi.exe"
    ],

    "libs-linux": ["z"],

    "versions-windows": [
        "USE_FREETYPE"
    ],

    "configurations" : [
        {
            "name" : "default"
        }, 
        {
            "name" : "minimal",
            "subConfigurations" : {
                "dlangui" : "minimal"
            }
        }, 
        {
            "name" : "console",
            "subConfigurations" : {
                "dlangui" : "console"
            }
        }, 
        {
            "name" : "x11",
            "subConfigurations" : {
                "dlangui" : "x11"
            }
        }
    ],

    "versions": ["EmbedStandardResources"]
}
